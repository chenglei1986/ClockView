<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/activity_main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.github.chenglei1986.clock.sample.MainActivity">

    <com.github.chenglei1986.clock.ClockView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:outerRimWidth="2dp"
        app:innerRimWidth="1.5dp"
        app:centerCircleColor="@color/red"
        app:sweepHandColor="@color/red"/>

</RelativeLayout>
